<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppStreams</title>
    <link rel="stylesheet" href="~/css/theme-feeling-blue-3.x.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <style>
        .btn {
            border:0;   /*reset*/
            box-shadow:0 0 0 0;
            text-decoration:none;
        }
        .btn-link.focus, .btn-link:focus {
            text-decoration:none;
        }
        .btn:hover {
           box-shadow:0 0 0 0;
        }

        main h3 {
            color:#c94c4c;
        }

        /* change the background color https://www.w3schools.com/colors/tryit.asp?filename=trycolors_palettes1 */
        .navbar-custom {
            background-color: #034f84;
        }
        /* change the brand and text color */
        .navbar-custom .navbar-brand,
        .navbar-custom .navbar-text {
            color: rgba(255,255,255,.8);
        }
        /* change the link color */
        .navbar-custom .navbar-nav .nav-link {
            color: rgba(255,255,255,.5);
        }
        /* change the color of active or hovered links */
        .navbar-custom .nav-item.active .nav-link,
        .navbar-custom .nav-item:focus .nav-link,
        .navbar-custom .nav-item:hover .nav-link {
            color: #ffffff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark navbar-custom">
      <a class="navbar-brand" href="/"><img src="/images/logoinv.png" style="width:30px;height:auto;" />&nbsp; AppStreams</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Services</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/services">All Services</a>
                <a class="dropdown-item" href="/services/Waste">Waste</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/services/events">Events</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Models</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/models">All Models</a>                
                <a class="dropdown-item" href="/models/Waste">Waste</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/models/Place">Place</a>
                <a class="dropdown-item" href="/models/Address">Address</a>                
                <a class="dropdown-item" href="/models/Event">Event</a>
                <a class="dropdown-item" href="/models/Subscription">Subscription</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Taxonomies</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/taxonomies">All Taxonomies</a>
                <a class="dropdown-item" href="/taxonomies/Waste">Waste</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/taxonomies/EventTypes">Event Types</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Events</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/events">All Events</a>
                <a class="dropdown-item" href="/events/Waste">Waste</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">API</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/api">All APIs</a>
                <a class="dropdown-item" href="/api/Waste">Waste</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/api/Events">Events</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="https://github.com/AppStreams/org"><img src="/images/github.png" style="width:17px;" /> GitHub</a>
            </li>
        </ul>
      </div>
    </nav>
    <style>
        .container { padding-top:10px;}
    </style>
    <main role="main" class="container">
        <div>
            @RenderBody()
        </div>
    </main><!-- /.container -->
    
    <footer class="text-muted" style="text-align:center;width:100%">
        <img src="/images/citybg_640.png" style="width:100%" />
        <div class="container">
            
            &copy; 2019 - appstreams.org - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>        
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/feather.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @if (!String.IsNullOrWhiteSpace(ViewBag.Section))
    {
    <script>
        $(document).ready(function () {
            var anchor = document.getElementById('@ViewBag.Section');
            anchor.scrollIntoView(true);
        });
    </script>
    }

    <script>
        $(document).ready(function () {
            // replace icons
            feather.replace();
        });
    </script>
</body>
</html>
